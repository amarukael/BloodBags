<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    tools:context=".TiketActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_rs"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/but_back"
            android:layout_width="16dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Tiket Kantong Darah"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tiket_namars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/but_back"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/poppins_medium"
            android:text="PMI Yoguakarta"
            android:textColor="@color/sec_prim"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tiket_jalanrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tiket_namars"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_medium"
            android:text="JL. Ring Road Utara"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_width="355dp"
            android:layout_height="match_parent"
            android:layout_below="@id/tiket_jalanrs"
            android:background="@drawable/roundedmap"
            android:elevation="5dp"
            android:outlineProvider="bounds">

            <ImageView
                android:id="@+id/tiket_qrcode"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_qrcode"
                />
            <TextView
                android:layout_marginTop="-20dp"
                android:id="@+id/tiket_kode"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_below="@id/tiket_qrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:text="BG776"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tiket_title_goldar"
                android:layout_marginStart="15dp"
                android:textSize="16sp"
                android:layout_below="@id/tiket_kode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:text="Golongan darah :"/>
            <TextView
                android:layout_marginStart="15dp"
                android:id="@+id/tiket_goldar"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_below="@id/tiket_title_goldar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:text="O"/>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tiket_title_tanggal"
                android:layout_marginStart="15dp"
                android:textSize="16sp"
                android:layout_below="@id/tiket_goldar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:text="Tanggal :"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/tiket_tanggal"
                android:layout_marginStart="15dp"
                android:textSize="20sp"
                android:layout_below="@id/tiket_title_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:text="Mar 25, 2022"/>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tiket_title_lokasi"
                android:layout_marginStart="15dp"
                android:textSize="16sp"
                android:layout_below="@id/tiket_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:text="Lokasi :"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/tiket_lokasi"
                android:layout_marginStart="15dp"
                android:textSize="20sp"
                android:layout_below="@id/tiket_title_lokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:text="PMI Yogyakarta"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tiketi_title_kantong"
                android:layout_marginEnd="15dp"
                android:textSize="16sp"
                android:layout_below="@id/tiket_kode"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:text="Kantong Darah :"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/tiket_kantong"
                android:layout_marginEnd="15dp"
                android:textSize="20sp"
                android:layout_below="@id/tiketi_title_kantong"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:text="10 Kantong"/>
            <TextView
                android:layout_below="@id/tiket_kantong"
                android:layout_marginTop="5dp"
                android:id="@+id/tiket_title_jam"
                android:layout_marginEnd="15dp"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:text="Jam :"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/tiket_jam"
                android:layout_marginEnd="15dp"
                android:textSize="20sp"
                android:layout_below="@id/tiket_title_jam"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:text="10:30 AM"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>