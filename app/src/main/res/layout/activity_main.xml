<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    >

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="top"
        android:text="Hi, Thoriq"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1"
        android:layout_marginStart="18dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="top"
        android:text="Selamat Datang di BloodBags"
        android:textColor="#797979"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_below="@id/txt2"
        android:id="@+id/frame_1"
        android:layout_width="fill_parent"
        android:layout_height="172dp"
        android:layout_marginTop="18dp"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/frame_1">

        <View
            android:id="@+id/ellipse_1"
            android:layout_width="168dp"
            android:layout_height="141dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_ellipse_1" />

        <View
            android:id="@+id/ellipse_2"
            android:layout_width="161dp"
            android:layout_height="91dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ic_ellipse_2"
            />

        <View
            android:id="@+id/ellipse_3"
            android:layout_width="145dp"
            android:layout_height="112dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ic_ellipse_3" />

        <RelativeLayout

            android:layout_margin="13dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:gravity="top"
                android:text="Tn Thoriq"
                android:textColor="#FAFAFA"
                android:textSize="18sp" />

            <View
                android:id="@+id/vector1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@id/txt3"
                android:background="@drawable/ic_baseline_person_24" />

            <TextView
                android:layout_below="@id/txt3"
                android:layout_toEndOf="@id/vector1"
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                android:fontFamily="@font/poppins_medium"
                android:text="AB099"
                android:textColor="#FAFAFA"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppins_medium"
                android:gravity="top"
                android:text="Total Point"
                android:textColor="#FAFAFA"
                android:textSize="14sp" />

            <TextView
                android:layout_below="@id/txt5"
                android:id="@+id/txt6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppins_medium"
                android:gravity="top"
                android:text="$ 676"
                android:textColor="#A30016"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ProgressBar
                android:layout_below="@id/vector1"
                android:layout_marginTop="40dp"
                android:id="@+id/porgbar_dash"
                style="@style/MyProgressBarTwo"
                android:theme="@style/MyProgressBarTwo"
                android:progress="30"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:progressTint="#FFCB8E"
                android:progressBackgroundTint="#D8FAFAFA"
                />

            <TextView
                android:id="@+id/some_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/porgbar_dash"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_medium"
                android:text="676/10.000"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/frame_2"
        android:layout_centerInParent="true"
        android:layout_below="@id/frame_1"
        android:layout_width="wrap_content"
        android:clipToPadding="false"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="8dp"
            android:id="@+id/donor"
            android:background="@drawable/ractangle_dash"
            android:orientation="vertical"
            android:gravity="center"
            android:elevation="20dp"
            android:layout_width="103dp"
            android:layout_height="120dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/donor"
                android:contentDescription="donor" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Donor Darah"
                android:textColor="#171717" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="8dp"
            android:layout_toEndOf="@id/donor"
            android:id="@+id/stok"
            android:background="@drawable/ractangle_dash"
            android:orientation="vertical"
            android:gravity="center"
            android:elevation="20dp"
            android:layout_width="103dp"
            android:layout_height="120dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/stok"
                android:contentDescription="stok" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Stok Darah"
                android:textColor="#171717" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="8dp"
            android:layout_toEndOf="@id/stok"
            android:id="@+id/point"
            android:background="@drawable/ractangle_dash"
            android:orientation="vertical"
            android:gravity="center"
            android:elevation="20dp"
            android:layout_width="103dp"
            android:layout_height="120dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/point"
                android:contentDescription="point" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Tukar Point"
                android:textColor="#171717" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/frame_2">

        <TextView
            android:id="@+id/txt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Blog Terbaru"
            android:textColor="#A30016"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/lihat_lainn"
            android:layout_width="120dp"
            android:layout_height="24dp"
            android:layout_above="@id/recycler"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/poppins_medium"
            android:text="Lihat Lainnya >"
            android:textSize="16sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_below="@id/txt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>